@{
  Layout = "_Layout";
}

@using PierresBakery.Models;
@model List<PierresBakery.Models.Treat>;

<h1>Treats</h1>

@if (@Model.Count == 0)
{
  <h3>No treats have been added yet!</h3>
} 

@foreach (Treat treat in Model)
{
  <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId }, new {@class = "content"})</li>
}

<p>@Html.ActionLink("Add new treat", "Create", "Treats", null, new { @class = "btn btn-primary brn-large"})</p>

<p>@Html.ActionLink("Home", "Index", "Home", null,  new { @class = "btn btn-primary btn-large" } )</p>