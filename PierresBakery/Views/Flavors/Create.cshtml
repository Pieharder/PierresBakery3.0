@{
  Layout = "_Layout";
}

@model PierresBakery.Models.Flavor

<h4>Add a new flavor</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)

    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Add new flavor" class="btn btn-success" />
}
<p>@Html.ActionLink("Show all flavors", "Index","Flavors", null,  new { @class = "btn btn-dark btn-large" } )</p>